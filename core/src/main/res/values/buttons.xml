<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CoreButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing_huge</item>
        <item name="android:paddingBottom">@dimen/spacing_x</item>
        <item name="android:paddingTop">@dimen/spacing_x</item>
        <item name="android:paddingRight">@dimen/spacing_huge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/minimum_height_button</item>
    </style>

    <style name="FeatureButton" parent="CoreButton">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="GreenButton" parent="FeatureButton">
        <item name="android:background">@drawable/selector_ripple_green_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextParagraph1</item>
    </style>

    <style name="GreenTextButton" parent="FeatureButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/greenyBlue</item>
        <item name="android:textAppearance">@style/TextParagraph1</item>
    </style>

</resources>